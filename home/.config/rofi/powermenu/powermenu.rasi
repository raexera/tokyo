configuration {
    show-icons:                     false;
    disable-history:                false;
	sidebar-mode: 					false;
}

@import "colors.rasi"

* {
    background-color:               @bg;
    text-color:                     @fg2;
}

window {
    transparency:                   "real";
    border-radius:                  12px;
    width:                          100px;
    location:                       east;
    x-offset:                       -5px;
    y-offset:                       0px;
}

listview {
    lines:							5;
    margin:                         8px;
    spacing:                        8px;
    cycle:                          true;
    dynamic:                        true;
    layout:                         vertical;
}

mainbox {
    background-color:               @bg;
    children:                       [ listview ];
}

element {
    background-color:               @bg1;
    text-color:                     @fg2;
    orientation:                    vertical;
    border-radius:                  12px;
}

element-text {
    background-color: 				inherit;
    text-color:       				inherit;
	font:							"feather 20";
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         26px 26px 26px 26px;
}

element normal.urgent,
element alternate.urgent {
    background-color:               @bg;
    text-color:                     @cyan;
    border-radius:                  12px;
}

element normal.active,
element alternate.active {
    background-color:               @fg2;
    text-color:                     @cyan;
}

element selected {
    background-color:               @cyan;
    text-color:                     @bg;
    border:                  		0px;
    border-radius:                  12px;
    border-color:                  	@bg;
}

element selected.urgent {
    background-color:               @cyan;
    text-color:                     @fg;
}

element selected.active {
    background-color:               @bg;
    color:                          @fg;
}
